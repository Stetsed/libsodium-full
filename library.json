{
    "name": "libsodium",
    "version": "1.10018.4",
    "description": "ESPHome's libsodium port",
    "keywords": "libsodium",
    "repository": {
        "type": "git",
        "url": "https://github.com/esphome/libsodium-esphome.git"
    },
    "export": {
        "include": [
            "port/*",
            "port_include/*",
            "library.json",
            "README.md",
            "LICENSE",
            "libsodium/src/libsodium/*",
            "libsodium/LICENSE"
        ]
    },
    "license": "MIT",
    "build": {
        "includeDir": "libsodium/src/libsodium/include",
        "srcDir": "libsodium/src/libsodium",
        "flags": [
            "-I libsodium/src/libsodium/include/sodium",
            "-I port_include",
            "-D CONFIGURED=1",
            "-Wno-unused-function",
            "-Wno-unknown-pragmas",
            "-Wno-unused-variable",
            "-Wno-type-limits"
        ],
    }
}
